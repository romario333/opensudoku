<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="cz.romario.opensudoku"
      android:versionName="0.6.1" android:versionCode="7">
    <uses-sdk android:minSdkVersion="3" />
    <application android:icon="@drawable/opensudoku" android:label="@string/app_name">
        <uses-library android:name="android.test.runner" />
        <activity android:name=".gui.SudokuListActivity"
                  android:label="@string/app_name">
        </activity>
        <activity android:name=".gui.SudokuEditActivity"
                  android:label="@string/edit_sudoku">
	        <intent-filter>
                <action android:name="android.intent.action.INSERT" />
                <action android:name="android.intent.action.EDIT" />
                <category android:name="android.intent.category.DEFAULT" />
	        </intent-filter>
        </activity>
        <activity android:name=".gui.ImportSudokuActivity"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.Dialog">
            <intent-filter>
                    <action android:name="android.intent.action.VIEW"></action>
                    <category android:name="android.intent.category.DEFAULT"></category>
                    <category android:name="android.intent.category.BROWSABLE"></category>
                    <data android:scheme="file" android:host="*"  android:pathPattern=".*\\.sdm" />
                    <data android:scheme="http" android:host="*"  android:pathPattern=".*\\.sdm" />
                    <data android:scheme="http" android:host="*"  android:pathPattern=".*\\.opensudoku" />
                    <!-- data android:scheme="http" android:mimeType="application/x-opensudoku" /-->
            </intent-filter> 
        </activity>
        <activity android:name=".gui.SudokuPlayActivity"
                  android:label="@string/app_name">
        </activity>
        <activity android:name=".gui.FolderListActivity"
                  android:label="@string/puzzle_folders">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".gui.GameSettingsActivity"
                  android:label="@string/game_settings">
        </activity>
        <activity android:name=".gui.DebugActivity"
                  android:label="debug">
        </activity>
    </application>
    <!--
    This declares that this app uses the instrumentation test runner targeting
    the package of com.example.android.apis.  To run the tests use the command:
    "adb shell am instrument -w com.example.android.apis.tests/android.test.InstrumentationTestRunner"
    -->
    <!-- TODO: Do tests significantly increase package size? -->
    <instrumentation android:name="android.test.InstrumentationTestRunner"
                     android:targetPackage="cz.romario.opensudoku"
                     android:label="OpenSudoku tests"/>
    
    <uses-permission android:name="android.permission.INTERNET" />
    
</manifest> 